<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ag_fl_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_black_1000"
    tools:context=".fun.game.GameActivity">

    <!--游戏界面和虚拟按键-->

    <LinearLayout
        android:id="@+id/ag_ll_board_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end|bottom"
        android:layout_margin="@dimen/margin_large"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/ag_tv_back"
            android:layout_width="40dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_grey"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="B"
            android:textColor="@color/md_grey_100"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ag_tv_click"
            android:layout_width="40dp"
            android:layout_height="0dp"
            android:layout_marginTop="24dp"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_grey"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="A"
            android:textColor="@color/md_grey_100"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

</FrameLayout>